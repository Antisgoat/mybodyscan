rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId
        // Prevent modification of sensitive billing fields in client writes
        && (!("billing" in request.resource.data) || request.auth.uid == userId);
      
      // User scans - users can only access their own scans
      match /scans/{scanId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User reports - users can only access their own reports  
      match /reports/{reportId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Global settings (read-only for authenticated users)
    match /settings/{document} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend can write settings
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}