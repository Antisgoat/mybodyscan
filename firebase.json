{
  "hosting": {
    "public": "dist",
    "headers": [
      {
        "source": "/index.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, max-age=0, must-revalidate"
          }
        ]
      },
      {
        "source": "/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/**",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Permissions-Policy",
            "value": "camera=(), microphone=()"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' 'unsafe-inline' https://appleid.cdn-apple.com https://js.stripe.com https://apis.google.com https://accounts.google.com https://www.gstatic.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https://*.googleusercontent.com; font-src 'self' data:; connect-src 'self' https://identitytoolkit.googleapis.com https://securetoken.googleapis.com https://firestore.googleapis.com https://storage.googleapis.com https://us-central1-mybodyscan-f3daf.cloudfunctions.net https://*.a.run.app https://api.openai.com https://appleid.apple.com https://appleid.cdn-apple.com https://api.stripe.com https://www.googleapis.com https://oauth2.googleapis.com https://www.gstatic.com https://accounts.google.com; frame-src https://js.stripe.com https://hooks.stripe.com https://accounts.google.com https://appleid.apple.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https://checkout.stripe.com"
          }
        ]
      },
      {
        "source": "/__previewframe/**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' 'unsafe-inline' https://appleid.cdn-apple.com https://js.stripe.com https://apis.google.com https://accounts.google.com https://www.gstatic.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https://*.googleusercontent.com; font-src 'self' data:; connect-src 'self' https://identitytoolkit.googleapis.com https://securetoken.googleapis.com https://firestore.googleapis.com https://storage.googleapis.com https://us-central1-mybodyscan-f3daf.cloudfunctions.net https://*.a.run.app https://api.openai.com https://appleid.apple.com https://appleid.cdn-apple.com https://api.stripe.com https://www.googleapis.com https://oauth2.googleapis.com https://www.gstatic.com https://accounts.google.com; frame-src https://js.stripe.com https://hooks.stripe.com https://accounts.google.com https://appleid.apple.com; frame-ancestors 'self' https://*.lovable.dev https://*.lovable.app; base-uri 'self'; form-action 'self' https://checkout.stripe.com"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/nutrition/search",
        "function": {
          "functionId": "nutritionSearch",
          "region": "us-central1"
        }
      },
      {
        "source": "/workouts/adjust",
        "function": {
          "functionId": "adjustWorkout",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/nutrition/barcode",
        "function": {
          "functionId": "nutritionBarcode",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/scan/start",
        "function": {
          "functionId": "startScanSession",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/scan/submit",
        "function": {
          "functionId": "submitScan",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/coach/chat",
        "function": {
          "functionId": "coachChat",
          "region": "us-central1"
        }
      },
      {
        "source": "/admin/**",
        "function": {
          "functionId": "adminGateway",
          "region": "us-central1"
        }
      },
      {
        "source": "/telemetry/log",
        "function": {
          "functionId": "telemetryLog",
          "region": "us-central1"
        }
      },
      {
        "source": "/uat/**",
        "function": {
          "functionId": "uatHelper",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/createCheckout",
        "function": {
          "functionId": "createCheckout",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/createCustomerPortal",
        "function": {
          "functionId": "createCustomerPortal",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/stripeWebhook",
        "function": {
          "functionId": "stripeWebhook",
          "region": "us-central1"
        }
      },
      {
        "source": "/createCheckout",
        "function": {
          "functionId": "createCheckout",
          "region": "us-central1"
        }
      },
      {
        "source": "/createCustomerPortal",
        "function": {
          "functionId": "createCustomerPortal",
          "region": "us-central1"
        }
      },
      {
        "source": "/stripeWebhook",
        "function": {
          "functionId": "stripeWebhook",
          "region": "us-central1"
        }
      },
      {
        "source": "/system/health",
        "function": "systemHealth",
        "region": "us-central1"
      },
      {
        "source": "/systemHealth",
        "function": "systemHealth",
        "region": "us-central1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/legal/privacy",
        "destination": "/legal/privacy.html",
        "type": 301
      },
      {
        "source": "/legal/terms",
        "destination": "/legal/terms.html",
        "type": 301
      },
      {
        "source": "/legal/refund",
        "destination": "/legal/refund.html",
        "type": 301
      }
    ]
  },
  "functions": [
    {
      "codebase": "default",
      "source": "functions",
      "runtime": "nodejs20",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" cache clean --force || true",
        "npm --prefix \"$RESOURCE_DIR\" run ci-or-install",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "secrets": [
        "OPENAI_API_KEY",
        "STRIPE_SECRET",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "USDA_FDC_API_KEY"
      ],
      "environmentVariables": {
        "AUTH_GOOGLE_ENABLED": "true",
        "AUTH_APPLE_ENABLED": "true",
        "AUTH_EMAIL_ENABLED": "true",
        "AUTH_DEMO_ENABLED": "true",
        "APPCHECK_MODE": "soft",
        "FIREBASE_WEB_API_KEY": "AIzaSyCmtvkIuKNP-NRzH_yFUt4PyWdWCCeO0k8"
      }
    }
  ],
  "firestore": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
