require_relative '../../node_modules/@capacitor/ios/scripts/pods_helpers'

# Capacitor 6+ requires iOS 14+; keep this pinned to avoid pod install failures.
platform :ios, '14.0'
use_frameworks!

# workaround to avoid Xcode caching of Pods that requires
# Product -> Clean Build Folder after new Cordova plugins installed
# Requires CocoaPods 1.6 or newer
# NOTE: Keep CocoaPods input/output paths enabled so Xcode can correctly
# compute dependency graph and avoid noisy "run script will be run during every build"
# warnings. If plugin changes require a clean build, use Xcode's Clean Build Folder.
# install! 'cocoapods', :disable_input_output_paths => true

def capacitor_pods
  pod 'Capacitor', :path => '../../node_modules/@capacitor/ios'
  pod 'CapacitorCordova', :path => '../../node_modules/@capacitor/ios'
  pod 'CapacitorFirebaseAuthentication', :path => '../../node_modules/@capacitor-firebase/authentication'
  pod 'CapacitorApp', :path => '../../node_modules/@capacitor/app'
  pod 'CapacitorBrowser', :path => '../../node_modules/@capacitor/browser'
  pod 'RevenuecatPurchasesCapacitor', :path => '../../node_modules/@revenuecat/purchases-capacitor'
end

target 'App' do
  capacitor_pods
  # Add your Pods here
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      config.build_settings['GCC_TREAT_WARNINGS_AS_ERRORS'] = 'NO'
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'

      # Reduce noisy Swift warnings from third-party pods (RevenueCat, etc).
      # Prefer upgrading pods when possible; this is a pragmatic fallback.
      if ['RevenueCat', 'PurchasesHybridCommon', 'RevenuecatPurchasesCapacitor'].include?(target.name)
        config.build_settings['SWIFT_SUPPRESS_WARNINGS'] = 'YES'
        inherited = config.build_settings['OTHER_SWIFT_FLAGS'] || '$(inherited)'
        config.build_settings['OTHER_SWIFT_FLAGS'] = "#{inherited} -suppress-warnings"
      end
    end
  end
end
