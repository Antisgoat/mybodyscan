rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Users can only upload to their own folders
    match /scans/{userId}/{scanId}/{allPaths=**} {
      // Allow read/write only if authenticated user matches the userId in path
      allow read, write: if request.auth != null && request.auth.uid == userId
        // Limit file size to 50MB
        && resource.size < 50 * 1024 * 1024
        // Only allow image and video files
        && resource.contentType.matches('image/.*|video/.*');
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}