rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null && request.auth.uid != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function validImageUpload() {
      return request.resource.size < 15 * 1024 * 1024 && request.resource.contentType.matches('image/.+');
    }

    // Canonical scan photo uploads:
    // scans/{uid}/{scanId}/{pose}.jpg
    match /scans/{uid}/{scanId}/{filename} {
      allow read: if isOwner(uid);
      allow create, update: if isOwner(uid) && validImageUpload();
      allow delete: if isOwner(uid);
    }

    // Dev / diagnostics: small owner-only write used by in-app "Test Storage Write".
    // NOTE: This is intentionally scoped to the owning user and a dedicated subpath.
    match /user_uploads/{uid}/debug/{filename} {
      allow read: if isOwner(uid);
      allow create, update: if isOwner(uid) && request.resource.size < 256 * 1024;
      allow delete: if isOwner(uid);
    }

    // Legacy scan uploads (read/delete only). New clients must not write here.
    match /user_uploads/{uid}/scans/{scanId}/{filename} {
      allow read: if isOwner(uid);
      allow create, update: if false;
      allow delete: if isOwner(uid);
    }

    match /user_uploads/{uid}/{scanId}/{filename} {
      allow read: if isOwner(uid);
      allow create, update: if false;
      allow delete: if isOwner(uid);
    }

    match /public/{path=**} {
      allow read: if true;
      allow write: if false;
    }

    match /{all=**} {
      allow read, write: if false;
    }
  }
}
